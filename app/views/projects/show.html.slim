.col-md-8    
  h3
    strong= @project.title
  h6= "Due date: #{@project.due_date}"
  br
  p= @project.description
  br
  = link_to "Edit Project", edit_project_path(@project), class: "btn btn-primary"
  = link_to "Abandon Project", project_path(@project), method: "delete", class: "btn btn-danger"

.col-md-4
  .row
    == render partial: 'tasks', locals: {project: @project}
