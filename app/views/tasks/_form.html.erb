  <h2>Add a New Task</h2>
  <%= form_for @task do |f| %>
  <div class="fluid-container">
    <label for="title">Title</label>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.text_field :title, class: 'from-control', placeholder: 'task title' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.date_field :due_date, class: 'form-control ' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Create Task" %>
    </div>
    <% end %>
  </div>