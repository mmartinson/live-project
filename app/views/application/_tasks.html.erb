<div class="col-md-4 col-sm-3 col-xs-0">
  <div class="row">
    <div class="col-md-2">
      <h3><strong>All Tasks</strong></h3>
    </div>
    <div class="col-md-2">
      <%= link_to "Add a Task", new_task_path, class: "btn btn-success" %>
    </div>
  </div>
  <% @tasks.each do |task| %>
  <h4><%= link_to task.title, task_path(task) %></h4>
  <hr>
  <% end %>
</div>